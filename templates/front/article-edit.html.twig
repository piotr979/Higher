{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-4 mb-4">
    <div class="row justify-content-md-center">
      <div class="col-md-12 col-lg-8">
        <h1 class="h2 mb-4 text-center">Edit article</h1>

          <!-- FORM STARTS HERE -->
        
        {{ form_start(articleForm) }}
        {{ form_row(articleForm.title) }}
       <div class="row">
         <div class="col-12 col-md-8">
          {{ form_row(articleForm.image_url) }}
         </div>
         <div class="col-12 col-md-4 ">
           <p>Current image</p>
           <img src="{{ asset('') }} " alt="">
         </div>
       </div>
  
        {{ form_row(articleForm.content) }}
        {{ form_row(articleForm.color) }}
        {{ form_row(articleForm.tags_id) }}
        <div class="row">
          <div class="col-1 me-4">
            {{ form_row(articleForm.submit) }}
            
          </div>
          <div class="col-10">
          <a href="{{ path('remove', { "id": article.id }) }}" class="btn btn-danger">Delete article</a>
          </div>
        </div>
       
        {{ form_end(articleForm) }}

        <!-- FORM ENDS HERE -->
       
      </div>
    </div>
  </div>

  </div>
</div>
</div>
{{ tinymce_init({
  theme: {'modern':{'language': app.request.locale, 'height': 500 }},
  toolbar: "insertfile undo redo | styleselect | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | link image",
  autosave_ask_before_unload: false
  })
}}

{% endblock %}
