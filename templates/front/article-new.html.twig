{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-4 mb-4">
    <div class="row justify-content-md-center">
      <div class="col-md-12 col-lg-8">
        <h1 class="h2 mb-4 text-center">New article</h1>

        <!-- FORM STARTS HERE -->

        <form action="">
            <div class="mb-3">
            <label for="title" class="form-label">Article title</label>
            <input type="text" class="form-control" aria-describedby="article title">
        </div>

        <label for="image" class="form-label">Cover image</label>
        <div class="input-group mb-3">
            <button class="btn btn-outline-secondary" type="button" id="inputGroupFileAddon03">Button</button>
            <input type="file" name="image" class="form-control" id="inputGroupFile03" aria-describedby="inputGroupFileAddon03" aria-label="Upload">
          </div>

         <!-- TEXT AREA --> 
        <label class="mb-2">Your article</label>
        <div class="form-group">
           <textarea id="editor"></textarea>
        </div>
        <!-- END -->

        <!-- COLOR PICKER -->
        <div class="d-block btn-group color-picker--wrapper" role="group" aria-label="Basic radio toggle button group">
            <label class="my-3 d-block" for="">Select group color</label>

            <label class="color-picker color-picker-color-1">
            <input type="radio" name="color" id="color-picker-color-1" checked="checked" value="red" />
            <span class="color-picker-block"></span></label>
            
            <label class="color-picker color-picker-color-2">
            <input type="radio" name="color" id="color-picker-color-2" value="blue" />
            <span class="color-picker-block"></span></label>
            
            <label class="color-picker color-picker-color-3">
            <input type="radio" name="color" id="color-picker-color-3" value="green" />
            <span class="color-picker-block"></span></label>
            
            <label class="color-picker color-picker-color-4">
            <input type="radio" name="color" id="color-picker-color-4" value="red" />
            <span class="color-picker-block"></span></label>
        </div>
        <!-- COLOR PICKER ENDS HERE -->

        <button type="submit" class="btn btn-primary mt-4">Submit</button>
    </form>

        <!-- FORM ENDS HERE -->
      </div>
    </div>
  </div>

  </div>
</div>
</div>
     <script src="https://cdn.tiny.cloud/1/l8uwbak1mjxo895bp92fo6cr1d2uqmjo4lxqwp0dt9cwjjku/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
<script>
  tinymce.init({
    selector: 'textarea#editor',
    menubar: false
  });
</script>	

{% endblock %}