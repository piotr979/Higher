{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	<!-- REGISTER FORM STARTS HERE -->
	<div class="container-xl mt-5">
		<div class="row justify-content-center">
			<div class="col-12 col-md-6">
				<h3 class="text-center">Register</h3>

				{{ form_start(registrationForm) }}
               
                {{ form_label(registrationForm.email, 'Email', {
                    'label_attr': {'class': 'field-required'}
                })}}
				{{ form_row(registrationForm.email) }}
                {{ form_label(registrationForm.first_name, 'First name', {
                    'label_attr': {'class': 'field-required'}
                  }) }}
                {{ form_row(registrationForm.first_name) }}
           
                {{ form_row(registrationForm.last_name) }}
                {{ form_label(registrationForm.plainPassword, 'Password', {
                    'label_attr': {'class': 'field-required' }
                }) }}
				{{ form_row(registrationForm.plainPassword) }}
      
				<button type="submit" class="btn btn-primary">Register</button>
				{{ form_end(registrationForm) }}

			</div>
		</div>
	</div>
	<!-- LOGIN FORM ENDS HERE -->

{% endblock %}

